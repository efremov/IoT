<div class="box">
	<%= link_to (image_tag project.image (:medium)),  user_project_path(project.user , project) %>
	<p class="description">
		<%= project.description %>
	</p>
	<p>
		<strong>
			Posted by <%= project.user.name %>
		</strong>
	</p>
	<% if current_user == project.user %>
	<p>
		<%= link_to 'Edit', edit_user_project_path(current_user, project) %>
		<%= link_to 'Destroy', user_project_path(project.user, project), method: :delete, data: { confirm: 'Are you sure?' } %>
	</p>
<% end %>
</div>

<tr>
<td><%= project.description %></td>
<td><%= link_to 'Show', user_project_path(project.user, project) %></td>
<td><%= link_to 'Edit', edit_user_project_path(project.user, project) %></td>
<td><%= link_to 'Destroy', user_project_path(project.user, project), method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>

